<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="3"
    android:id="@+id/spinnerBG"
    tools:context="com.example.kim.breaktimeapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="951dp">

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:id="@+id/iViewFlower1"
                android:src="@drawable/flower_1"
                android:layout_gravity="left|top"
                android:background="#eee605"
                android:weightSum="0.2"/>

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:id="@+id/iViewFlower2"
                android:src="@drawable/flower_2"
                android:layout_gravity="right|top"
                android:background="#eee605"
                android:weightSum="0.2"/>

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:id="@+id/iViewFlower3"
                android:src="@drawable/flower_3"
                android:layout_gravity="center"
                android:background="#eee605"
                android:weightSum="0.2"/>

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:id="@+id/iViewFlower4"
                android:src="@drawable/flower_4"
                android:layout_gravity="right|bottom"
                android:background="#eee605"
                android:weightSum="0.2"/>

            <ImageView
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:id="@+id/iViewFlower5"
                android:src="@drawable/flower_5"
                android:layout_gravity="left|bottom"
                android:background="#eee605"
                android:weightSum="0.2"/>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#05ecab">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SPIN"
            android:id="@+id/btnSpin"
            android:layout_gravity="left|center_vertical"
            android:backgroundTint="#FFFFFF"
            android:textSize="60dp"
            android:enabled="true" />

    </FrameLayout>

</LinearLayout>